{# templates/layout.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}EcoRide{% endblock %}</title>

    {# Bootstrap CSS via CDN #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    {# CSS personnalisé #}
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
</head>
<body class="bg-light">

{# Navbar #}
<nav class="navbar navbar-expand-lg navbar-dark bg-success mb-4">
    <div class="container">
        <a class="navbar-brand" href="{{ path('accueil_index') }}">EcoRide</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" href="{{ path('accueil_index') }}">Accueil</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('utilisateur_create') }}">Créer</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('inscription') }}">Inscription</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('covoiturages_index') }}">Covoiturages</a></li>
            </ul>
        </div>
    </div>
</nav>

{# Contenu principal #}
<div class="container">
    {% block content %}{% endblock %}
</div>

{# Footer #}
<footer class="bg-success text-white text-center py-3 mt-5">
    &copy; 2025 EcoRide | <a href="#" class="text-white">Mentions légales</a> | Contact: contact@ecoride.fr
</footer>

{# Bootstrap JS + Popper via CDN #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

{# JS personnalisé #}
<script src="{{ asset('assets/js/app.js') }}"></script>
</body>
</html>
